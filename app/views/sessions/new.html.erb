<h1 class="text-center mt-4">Log in</h1>

<div class="container">
  
  <div class="row justify-content-center ">
    <div class="col-12">
      <%= form_with(scope: :sessions, url: login_path, class: "shadow bg-info mt-4 p-4 rounded", local: true) do |form| %>

        <div class="form-group row">
          <%= form.label :email, class: "col-2 col-form-label text-white" %>
          <div class="col-10">
            <%= form.email_field :email, class: "form-control shadow rounded", placeholder: "Enter your email address"%>
          </div>
        </div>

        <div class="form-group row">
          <%= form.label :password, class: "col-2 col-form-label text-white" %>
          <div class="col-10">
            <%= form.password_field :password, class: "form-control shadow rounded", placeholder: "Enter your password"%>
          </div>
        </div>

        <div class="form-group row">
          <%= form.submit("Log in", class: "btn btn-outline-light btn-lg center mx-auto") %>
        </div>

      <% end %>

    </div>
  </div>
  
  <div class="mx-auto text-center mt-4">
    <%= link_to '[ Cancel and return to articles listing ]', articles_path , class: "text-info"%>
  </div>

</div>
