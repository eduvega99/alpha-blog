<div class="container">
  
  <div class="row justify-content-center ">
    <div class="col-12">
      <%= render 'shared/errors', obj: @category %>
      <%= form_with(model: @category, class: "shadow bg-info mt-4 p-4 rounded", local: true) do |form| %>
        <div class="form-group row">
          <%= form.label :name, "Category name" ,class: "col-2 col-form-label text-white" %>
          <div class="col-10">
            <%= form.text_field :name, class: "form-control shadow", placeholder: "Enter a name"%>
          </div>
        </div>

        <div class="form-group row">
          <%= form.submit class: "btn btn-outline-light btn-lg center mx-auto" %>
        </div>
      <% end %>

    </div>
  </div>
  
  <div class="mx-auto text-center mt-4">
    <%= link_to '[ Cancel and return to articles listing ]', articles_path , class: "text-info"%>
  </div>

</div>
