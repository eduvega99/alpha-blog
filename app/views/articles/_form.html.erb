<div class="container">
  
  <div class="row justify-content-center ">
    <div class="col-12">
      <%= render 'shared/errors', obj: @article %>
      <%= form_with(model: @article, class: "shadow bg-info mt-4 p-4 rounded", local: true) do |form| %>
        <div class="form-group row">
          <%= form.label :title, class: "col-2 col-form-label text-white" %>
          <div class="col-10">
            <%= form.text_field :title, class: "form-control shadow", placeholder: "Title of article"%>
          </div>
        </div>

        <div class="form-group row">
          <%= form.label :description, class: "col-2 col-form-label text-white" %>
          <div class="col-10">
            <%= form.text_area :description, rows: 10, class: "form-control shadow rounded", placeholder: "Description of article"%>
          </div>
        </div>

        <div class="form-group row">
          <%= form.label :category, class: "col-2 col-form-label text-white" %>
          <div class="col-10">
            <%= form.collection_select(:category_ids, Category.all, :id, :name, 
            { prompt: "Make your selection from the list below (can be empty)" }, { multiple: true, class: "custom-select shadow rounded" }) %>
          </div>
        </div>

        <div class="form-group row">
          <%= form.submit class: "btn btn-outline-light btn-lg center mx-auto"%>
        </div>
      <% end %>

    </div>
  </div>
  
  <div class="mx-auto text-center mt-4">
    <%= link_to '[ Cancel and return to articles listing ]', articles_path , class: "text-info"%>
  </div>

</div>
