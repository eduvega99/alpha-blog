<h1 class="text-center mt-4"><%= @article.title %></h1>

<div class="container">
    <div class="row  mt-4 ">
      <div class="col-8 offset-2">
        <div class="card text-center shadow mb-5 bg-white rounded">
          <div class="card-header font-italic">
            by <%= @article.user.username if @article.user %>
            <%= link_to gravatar_for(@article.user), user_path(@article.user) %>
          </div>
          <div class="card-body">
            <div class="card-text text-left mb-3"><%= @article.description %></div>
            <% if logged_in? && (@article.user == current_user || current_user.admin?) %>
              <%= link_to 'Edit', edit_article_path(@article.id), class: "btn btn-outline-info" %>
              <%= link_to 'Delete', article_path(@article.id), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-outline-danger" %>
            <% end %>
          </div>
          <div class="card-footer text-muted">
            <small>
              Created <%= time_ago_in_words(@article.created_at) %> ago, 
              edited <%= time_ago_in_words(@article.updated_at) %> ago
            </small>
          </div>
        </div>
      </div>
    </div>
</div>